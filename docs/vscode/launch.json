    "version": "0.2.0",
    "debugServer": 4711,
    "configurations": [
        {
            "name": "Launch api",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "api"
            ]
        },
        {
            "name": "Launch worker consumer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "sqs-consumer"
            ]
        }
    ]
}